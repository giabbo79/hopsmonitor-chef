service {
    id = "grafana"
    name = "grafana"
    tags = [
        "grafana"
    ]
    port = <%= node['grafana']['port'] %> 
    check = {
        id = "grafana-check"
        name = "Health check for Grafana"
        tcp = "localhost:<%= node['grafana']['port'] %>"
#        http = "http://localhost:<%= node['grafana']['port'] %>/api/healthy"
        interval = "20s"
        timeout = "5s"
#        status = "passing"
    }
}
